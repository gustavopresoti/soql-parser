{
  "testEnvironment": "node",
  "globals": {
    "ts-jest": {
      "isolatedModules": true
    }
  },
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(js|ts)$",
  "moduleFileExtensions": ["ts", "js"],
  "modulePathIgnorePatterns": ["/lib"]
}
